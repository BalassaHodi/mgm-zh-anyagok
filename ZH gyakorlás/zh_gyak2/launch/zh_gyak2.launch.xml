<launch>
    <!-- RVIZ2-->
    <node pkg="rviz2" exec="rviz2" name="rviz2"
        args="-d $(find-pkg-share zh_gyak2)/rviz/zh_gyak2.rviz" />

    <!-- GYAK3 ROSBAG-->
    <executable
        cmd="ros2 bag play --clock 1000 $(find-pkg-share gyak3)/bag"
        output="screen"
        name="rosbag_play"
        shell="true"
    />


    <!-- Custom NODES -->
    <node pkg="zh_gyak2" exec="calc_displacement" name="calc_displacement" output="screen">
        <param name="use_sim_time" value="true" />
    </node>

    <node pkg="zh_gyak2" exec="calc_centroid" name="calc_centroid" output="screen">
        <param name="use_sim_time" value="true" />
    </node>
</launch>